$background = #FFFFFF
$font-color = #222222
$main-color = #57068C
$alternate-color = #FFFFFF

body
	font: 14px Helvetica, serif
	background: $background

#header
	background: $main-color
	padding: 10px
	
	h1
		background: url('../images/nyu-logo-white.png') no-repeat left top
		padding-left: 90px
		line-height: 85px
		text-transform: uppercase
		font-weight: bold
		font-size: 200%
		color: $alternate-color
			
h2
	background: $main-color
	color: $alternate-color
	height: 1.5em
	line-height: @height
	font-size: 300%
	font-weight: bold
	text-align: center	
	clear: both
	margin-bottom: 0
	
p
	display: block
	font-size: 200%
	margin: 30px
	color: $font-color

p#login
	text-align: center
	
	a
		

form.ballot		
	ul
		list-style: none
		margin: 0
		padding: 0		
		
		li
			margin: 0
			padding: 0
			
		li.candidate
			float: left
			margin: 30px
			color: #FFF
			position: relative
			
			&.selected
				
				label
					background: #542793
				
					em
						display: block
						
			input
				display: none
			
			label, p.bio
				width: 210px
				background: #808080
				
			label
				height: 141px				
				margin: 0
				position: relative
				
				em
					display: none
					width: 32px
					height: 32px
					background: #808080 url('../images/check.gif')
					position: absolute
					top: 0px
					left: 0px
				
				strong
					position: absolute
					left: 110px
					top: 50%
					margin-top: -1.5em
					float: left
					display: block
					width: 100px
					font-size: 180%
					line-height: 1em
				
				img
					position: absolute
					left: 2px
					top: 2px
					width: 100px
			
			button
				position: absolute
				top: 0px
				right: 0px
							
			p.bio
				display: none
				font-size: 80%
				margin: 0
				width: 190px
				padding: 10px
				color: #FFF
					
				
			&.noconfidence
				label
					strong
						left: 5px
						width: 200px
						text-align: center
						font-size: 240%
			
li.clear
	clear: both

h2#vote
	padding: 10px
	input, a
		margin-right: 10px
		font-weight: normal
	span
		font-size: 100%
		background: #542793
		border: 2px solid #FFF
		padding: 5px
		height: 1.5em
		color: #FFF
		margin-right: 30px
		
#admin
	input
		margin: 30px
		font-size: 200%
		width: 300px
		height: 1.5em
		line-height: 1.5em
		padding: 10px
		
#results
	&, ul, li
		list-style: none
	li.race
		canvas
			margin-left: 40px
			float: right
		ul
			float: left
			
			li.candidate
				clear: both
				float: left
				line-height: 2em

				strong
					float: left
				em.swatch
					float: left
					display: block
					width: 2em
					height: 2em
					border: 1px solid white