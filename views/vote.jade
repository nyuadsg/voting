extends layout

block content
	form(class='ballot', id=election.id,method='POST')
		
		if( admin )
			#admin
				input(id='netID',name='netID',type='text',placeholder='NetID')
				input(id='RFID',name='RFID',type='text',placeholder='RFID')
		else
			p#directions For each office, select every candidate you approve of. When you have finished, simply click <strong>Vote</strong>.
	
		ul#races
			each race in races
				li.race(id=race.id)
					h2= race.name
					ul
						each candidate in race.candidates
							li.candidate
								input(type='checkbox',name=race.id,id=candidate.id,value=candidate.id)
								label(for=candidate.id)
									strong #{candidate.name} '#{candidate.shortyear}
									img(src=candidate.photo,width=100,height=137)
									em
						li.clear
		
		h2#vote
			input(id='submit',type='submit',value='Vote')